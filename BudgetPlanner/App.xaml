<Application x:Class="BudgetPlanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:BudgetPlanner"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- WPF UI: Theme and controller -->
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                
                <!-- App-specific resources -->
                <ResourceDictionary Source="/PresentationLayer/Resources/Colors.xaml" />
                <ResourceDictionary Source="/PresentationLayer/Resources/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
         
    </Application.Resources>
</Application>

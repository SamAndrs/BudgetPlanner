<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryBackgroundColor">#242424</Color>
    <Color x:Key="SecondaryBackgroundColor">#1b1b1b</Color>
    <Color x:Key="AccentBackgroundColor">#4C8BE8</Color>
    
    <Color x:Key="PrimaryForegroundColor">#ffffff</Color>
    <Color x:Key="SecondaryForegroundColor">#8c8c8c</Color>
   

    <Color x:Key="IncomeGreenColor">#39dc9c</Color>
    <Color x:Key="ExpenseRedColor">#d15356</Color>
    <Color x:Key="IncomeBackgroundColor">#138656</Color>
    <Color x:Key="ExpenseBackgroundColor">#733f3d</Color>
    <Color x:Key="WarningYellowColor">#FAB005</Color>
    
    <Color x:Key="ButtonColor">#7c7c7c</Color>
    <Color x:Key="ButtonColorHover">#4C8BE8</Color>
    <Color x:Key="HoverBackgroundColor">#3A3A3A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="{StaticResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryBackground" Color="{StaticResource SecondaryBackgroundColor}" />
    <SolidColorBrush x:Key="AccentBackground" Color="{StaticResource AccentBackgroundColor}" />
    
    <SolidColorBrush x:Key="PrimaryForeground" Color="{StaticResource PrimaryForegroundColor}" />
    <SolidColorBrush x:Key="SecondaryForeground" Color="{StaticResource SecondaryForegroundColor}" />
    

    <SolidColorBrush x:Key="IncomeGreen" Color="{StaticResource IncomeGreenColor}" />
    <SolidColorBrush x:Key="ExpenseRed" Color="{StaticResource ExpenseRedColor}" />
    <SolidColorBrush x:Key="WarningYellow" Color="{StaticResource WarningYellowColor}" />
    <SolidColorBrush x:Key="IncomeBackground" Color="{StaticResource IncomeBackgroundColor}" />
    <SolidColorBrush x:Key="ExpenseBackground" Color="{StaticResource ExpenseBackgroundColor}" />

    <SolidColorBrush x:Key="PrimaryButtonColor" Color="{StaticResource ButtonColor}" />
    <SolidColorBrush x:Key="SecondaryButtonColor" Color="{StaticResource ButtonColorHover}" />
    <SolidColorBrush x:Key="HoverBackground" Color="{StaticResource HoverBackgroundColor}" />

    <!-- 
     <Color x:Key="AccentForegroundColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="AccentForeground" Color="{StaticResource AccentForegroundColor}" />
    -->
    
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources"
                    xmlns:models="clr-namespace:BudgetPlanner.DomainLayer.Models"
                    >

    <!-- BudgetPost Listview Template -->
    <DataTemplate x:Key="BudgetPostTemplate" DataType="{x:Type models:BudgetPost}">
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            
            <!-- Date -->
            <TextBlock Grid.Column="0"
            Text="{Binding Date, StringFormat=yyyy-MM-dd}"
            Foreground="{StaticResource TextLight}"
            VerticalAlignment="Center"
            Margin="16,0" />

            <!-- Amount (colored + minus for expenses -->
            <TextBlock Grid.Column="1"
            Text="{Binding Converter={StaticResource PostTypeAmountConverter}}"
            Foreground="{Binding PostType, Converter={StaticResource PostTypeToBrushConverter} }"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Margin="16,0" />

            <!-- Edit/ Delete buttons -->
            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
                <Button Content="✏️"
                Command="{Binding DataContext.EditPostCommand,
                        RelativeSource={RelativeSource AncestorType=ListView}}"
                CommandParameter="{Binding}"
                Background="{StaticResource PrimaryBlue}"
                Foreground="{StaticResource PrimaryBlueLight}"/>

                <Button Content="🗑️"
                Command="{Binding DataContext.DeletePostCommand,
                            RelativeSource={RelativeSource AncestorType=ListView}}"
                CommandParameter="{Binding}"
                Background="{StaticResource PrimaryBlue}"
                Foreground="{StaticResource PrimaryBlueLight}"/>
            </StackPanel>

            <!-- Description + Category -->
            <StackPanel Grid.Column="3" Grid.Row="1">
                <TextBlock Text="{Binding Description}"
                Foreground="{StaticResource TextDark}"
                FontWeight="SemiBold" />
                
                <TextBlock Text="{Binding Category.Name}"
                Style="{StaticResource LabelTextStyle}"
                FontSize="12"/>
            </StackPanel>

        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
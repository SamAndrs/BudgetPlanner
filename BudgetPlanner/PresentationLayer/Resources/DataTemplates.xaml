<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:models="clr-namespace:BudgetPlanner.DomainLayer.Models"
                    >

    <!-- BudgetPost Listview Template -->
    <DataTemplate x:Key="BudgetPostTemplate" DataType="{x:Type models:BudgetPost}">
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="125"/>
            </Grid.ColumnDefinitions>


            <!-- Date -->
            <TextBlock Grid.Column="0"
                        Text="{Binding Date, StringFormat=yyyy-MM-dd}"
                        Foreground="{StaticResource PrimaryForeground}"
                        VerticalAlignment="Center"
                        Margin="16,0" />

            <!-- Amount (colored + minus for expenses -->
            <TextBlock Grid.Column="1"
                        Text="{Binding Converter={StaticResource PostTypeAmountConverter}}"
                        Foreground="{Binding PostType, Converter={StaticResource PostTypeToBrushConverter} }"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Margin="16,0" />

            <!-- Description + Category -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="{Binding Description}"
                            Foreground="{StaticResource SecondaryForeground}"
                            FontWeight="SemiBold" />

                <TextBlock Text="{Binding Category.Name}"
                            Style="{StaticResource LabelTextStyle}"
                            FontSize="12"/>
            </StackPanel>


            <!-- Edit/ Delete buttons -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
                <Button Content="✏️"
                        Command="{Binding DataContext.EditPostCommand,
                                        RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Background="{StaticResource PrimaryButtonColor}"
                        Foreground="{StaticResource PrimaryForeground}"/>

                <Button Content="🗑️"
                        Command="{Binding DataContext.DeletePostCommand,
                                        RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Background="{StaticResource PrimaryButtonColor}"
                        Foreground="{StaticResource PrimaryForeground}"/>
            </StackPanel>

            <!-- Recurring -->
            <TextBlock Grid.Column="4" Margin="16,0"
                       Text="{Binding Recurring, Converter={StaticResource EnumDescription}}" 
                       Foreground="{StaticResource SecondaryForeground}"/>
           

        </Grid>
    </DataTemplate>

</ResourceDictionary>
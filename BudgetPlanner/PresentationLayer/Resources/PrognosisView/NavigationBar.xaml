<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.PrognosisView.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.PrognosisView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Month Selection + Navigation bar -->
    <Grid Grid.Column="1" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Previous month button -->
        <Button Grid.Column="0"
                Content="◀"
                Style="{StaticResource NavButtonStyle}"
                Command="{Binding SelectPreviousMonthCommand}"
                Margin="10,0" />

        <!-- Month selection box -->
        <ComboBox Grid.Column="1"
                  ItemsSource="{Binding MonthlyPrognoses}"
                  SelectedItem="{Binding SelectedPrognosis}"
                  DisplayMemberPath="Month"
                  HorizontalAlignment="Center"
                  Width="200"
                  Height="25"
                  FontSize="16"
                  Margin="0,0,0,0"/>

        <!-- Next month button -->
        <Button Grid.Column="2"
                Content="▶"
                Style="{StaticResource NavButtonStyle}"
                Command="{Binding SelectNextMonthCommand}"
                Margin="10,0" />

    </Grid>
</UserControl>

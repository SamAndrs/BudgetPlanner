<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.PrognosisView.Summaries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.PrognosisView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Total sum (income)-->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"
                   Text="Inkomster (total)" 
                   Style="{StaticResource LabelTextStyle}"/>

        <Border Grid.Row="1" Grid.Column="0" CornerRadius="12"
                Padding="5" Margin="5,0,5,5"
                Background="{StaticResource SecondaryBackground}">

            <TextBlock Text="{Binding TotalIncome, StringFormat='+{0:C}'}"
                       Style="{StaticResource SummaryCardStyle}"
                       Foreground="{StaticResource IncomeBackground}" />
        </Border>

        <!-- Total sum (expenses) -->
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,5,0,0"
                   Text="Utgifter (total)" 
                   Style="{StaticResource LabelTextStyle}"/>

        <Border Grid.Row="1" Grid.Column="1" CornerRadius="12" 
                Padding="5" Margin="5,0,5,5"
                Background="{StaticResource SecondaryBackground}">

            <TextBlock Text="{Binding TotalExpense, StringFormat='-{0:C}'}"
                       Style="{StaticResource SummaryCardStyle}"
                       Foreground="{StaticResource ExpenseBackground}" />
        </Border>

        <!-- Total difference -->
        <TextBlock Grid.Row="0" Grid.Column="3" Margin="0,5,0,0"
                   Text="Differens (total)" 
                   Style="{StaticResource LabelTextStyle}"/>

        <Border Grid.Row="1" Grid.Column="3" CornerRadius="12" 
                Padding="5" Margin="5,0,5,5"
                Background="{StaticResource SecondaryBackground}">

            <TextBlock Style="{StaticResource SummaryDiffCardStyle}"
                       Text="{Binding TotalDifference, StringFormat={}{0:+# ##0.00 kr;-# ##0.00 kr}}"/>
        </Border>
    </Grid>
</UserControl>

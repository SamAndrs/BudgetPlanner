<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.PrognosisView.PrognosisChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.PrognosisView"
             xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             x:Name="root"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border CornerRadius="12" Padding="5" Margin="5"
        Background="{StaticResource SecondaryBackground}">
        <Grid>
            <sp:WpfPlot x:Name="PlotControl"/>
        </Grid>

    </Border>
</UserControl>

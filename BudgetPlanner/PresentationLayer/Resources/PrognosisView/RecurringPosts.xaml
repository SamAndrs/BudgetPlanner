<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.PrognosisView.RecurringPosts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.PrognosisView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,0,0,5"
                   Text="Återkommande poster per månad"
                   Style="{StaticResource LabelTextStyle}"/>

        <Border Style="{StaticResource CardStyle}" Padding="16" Grid.Row="1">
            <ListView Background="Transparent" Padding="8"
                      BorderBrush="Transparent"
                      ItemsSource="{Binding SelectedPrognosis.BudgetPosts}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Date -->
                            <TextBlock Grid.Column="1" Margin="0,0,10,5"
                                       Text="{Binding Date, StringFormat={}{0:dd}}" 
                                       Foreground="{StaticResource SecondaryForeground}"/>
                            
                            <!-- Description -->
                            <TextBlock Grid.Column="2" Margin="0,0,10,5"
                                       Text="{Binding Description}" 
                                       Foreground="{StaticResource SecondaryForeground}"/>

                            <!-- Amount -->
                            <TextBlock Grid.Column="3" Margin="0,0,10,5"
                                       Text="{Binding Amount, StringFormat={}{0:N0} kr}"
                                       Foreground="{Binding PostType, 
                                                Converter={StaticResource PostTypeToBrushConverter}}"/>
                        </Grid>
                    </DataTemplate>


                </ListView.ItemTemplate>
            </ListView>


        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.PrognosisView.MonthlyIncome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.PrognosisView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,0,0,5"
                 Text="Beräknad Månadsinkomst"
                 Style="{StaticResource LabelTextStyle}"/>

        <Border Style="{StaticResource CardStyle}" Grid.Row="1"
              Padding="16"  Margin="0,0,16,0">
            <StackPanel>

                <!-- Yearly income-->
                <TextBlock Text="Årsinkomst" Style="{StaticResource LabelTextStyle}"/>
                <TextBlock Text="{Binding Settings.YearlyIncome, StringFormat={}{0:N0} kr}" 
                           Margin="0,4,0,12" FontWeight="Bold"
                           FontSize="22" Foreground="{StaticResource PrimaryForeground}"/>

                <!-- Calculated monthly income/ per year-->
                <TextBlock Text="{Binding Settings.TaxRate, StringFormat='Månadsinkomst/år (netto. Skattesats: {0}%)' }"
                           Style="{StaticResource LabelTextStyle}" Margin="0,4,0,4"/>

                <TextBlock Text="{Binding CalculatedMonthlyIncome, StringFormat={}{0:N0} kr}"
                           FontSize="22" FontWeight="Bold" Margin="0,0,0,10"
                           Style="{StaticResource LabelTextStyle}"
                           Foreground="{StaticResource AccentBackground}"/>

                
                <!-- Separator -->
                <Border Height="2" Background="{StaticResource SecondaryForeground}" Margin="5"></Border>

                <StackPanel Margin="5">

                    <!-- Yearly workhours-->
                    <TextBlock Margin="5" Text="Årsarbetstid (timmar)" 
                               Style="{StaticResource LabelTextStyle}"/>

                    <TextBlock Text="{Binding Settings.YearlyWorkhours}" 
                               FontWeight="Bold"
                               FontSize="22" Foreground="{StaticResource PrimaryForeground}"/>


                    <!-- Monthly income (hoursalary - actual) -->
                    <TextBlock Margin="5,10,0,5"
                               Text="{Binding HourlySalaryActual, StringFormat='Månadsinkomst (timlön -faktisk: {0}kr)'}"
                               Style="{StaticResource LabelTextStyle}"/>

                    <TextBlock Text="{Binding HourlyIncomeMonthActual, StringFormat={}{0:N0} kr}"
                               FontSize="22" FontWeight="Bold" Margin="0,0,0,10"
                               Style="{StaticResource LabelTextStyle}"
                               Foreground="{StaticResource AccentBackground}"/>

                    <!-- Monthly income (hoursalary - adjustable) -->
                    <TextBlock Margin="5,10,0,5"
                               Text="Månadsinkomst (timlön -justerad)" Style="{StaticResource LabelTextStyle}"/>

                    <TextBlock Text="{Binding HourlyIncomeMonthAdjustable, StringFormat={}{0:N0} kr}"
                               FontSize="22" FontWeight="Bold" Margin="0,0,0,10"
                               Style="{StaticResource LabelTextStyle}"
                               Foreground="{StaticResource AccentBackground}"/>

                    <!-- Adjustable hourly salary -->
                    <TextBlock Margin="5,10,0,5"
                               Text="timlön -justerbar" Style="{StaticResource LabelTextStyle}"/>

                    <TextBox Width="100" HorizontalAlignment="Left" Margin="5,0,0,5"
                        Text="{Binding HourlySalaryAdjustable, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>

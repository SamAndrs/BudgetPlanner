<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:views="clr-namespace:BudgetPlanner.PresentationLayer.Views"
                    xmlns:vm="clr-namespace:BudgetPlanner.PresentationLayer.ViewModels"
                    >


    <!-- ViewModels to view mapping -->
    <DataTemplate DataType="{x:Type vm:DashboardViewVM}">
        <views:DashboardView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:BudgetPostsViewVM}">
        <views:BudgetPostsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PrognosisViewVM}">
        <views:PrognosisView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SettingsViewVM}">
        <views:SettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddEditBudgetPostVM}">
        <views:AddEditBudgetPostView />
    </DataTemplate>

</ResourceDictionary>
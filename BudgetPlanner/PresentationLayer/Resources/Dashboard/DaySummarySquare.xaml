<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.Dashboard.DaySummarySquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">

    <Border Padding="4" CornerRadius="5" Margin="2" >

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
                <Style.Triggers>
                    <!-- If placeholder, "black out" square -->
                    <DataTrigger Binding="{Binding IsPlaceholder}" Value="True">
                        <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
      
        <Grid>

           <StackPanel HorizontalAlignment="Center" Visibility="{Binding IsPlaceholder, Converter={StaticResource BoolToVisibility},
                ConverterParameter=Invert}">
                
               <!-- Day number -->
                <TextBlock Text="{Binding DayNumber}" 
                FontSize="14"
                FontWeight="Bold"
                Foreground="{StaticResource SecondaryForeground}"
                HorizontalAlignment="Center"/>

                <!-- Total Income/ day-->
                <TextBlock Text="{Binding TotalIncome}"
                Foreground="{StaticResource IncomeGreen}"
                FontWeight="Bold"
                Visibility="{Binding HasIncome, 
                     Converter={StaticResource BoolToVisibility}}" 
                HorizontalAlignment="Center"/>

                <!-- Total Expense/ day -->
                <TextBlock Text="{Binding TotalExpense}"
                Foreground="{StaticResource ExpenseRed}"
                FontWeight="Bold"
                Visibility="{Binding HasExpense, 
                     Converter={StaticResource BoolToVisibility}}" 
                HorizontalAlignment="Center"/>

                <!-- 0-Amount -->
                <TextBlock Text="0"
                FontWeight="Bold"
                Foreground="{StaticResource SecondaryForeground}"
                Visibility="{Binding IsZero, 
                     Converter={StaticResource BoolToVisibility}}" 
                HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Border>
    
</UserControl>

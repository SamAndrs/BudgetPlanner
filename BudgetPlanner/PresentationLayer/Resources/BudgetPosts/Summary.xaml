<UserControl x:Class="BudgetPlanner.PresentationLayer.Resources.BudgetPosts.Summary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetPlanner.PresentationLayer.Resources.BudgetPosts"            
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Grid.Row="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Total sum (income)-->
        <TextBlock Grid.Row="0" Text="Inkomster (poster -totalt)" 
                   Margin="0,5,0,5" Style="{StaticResource LabelTextStyle}"/>
        
        <Border Grid.Row="1" CornerRadius="12"
                Padding="5" Background="{StaticResource SecondaryBackground}">

            <TextBlock Text="{Binding TotalIncome, StringFormat='+{0:C}'}"
                       Style="{StaticResource SummaryCardStyle}"
                       Foreground="{StaticResource IncomeBackground}" />
        </Border>
        

        <!-- Total sum (expenses) -->
        <TextBlock Grid.Row="2" Text="Utgifter (poster -totalt)" 
                Margin="0,5,0,5" Style="{StaticResource LabelTextStyle}"/>

        <Border Grid.Row="3" CornerRadius="12" 
                Padding="5" Background="{StaticResource SecondaryBackground}">

            <TextBlock Text="{Binding TotalExpense, StringFormat='-{0:C}'}"
                       Style="{StaticResource SummaryCardStyle}"
                       Foreground="{StaticResource ExpenseBackground}" />
        </Border>
        

        <!-- Total difference -->
        <TextBlock Grid.Row="4" Text="Differens (poster -totalt)" 
                   Margin="0,5,0,5" Style="{StaticResource LabelTextStyle}"/>
        
        <Border Grid.Row="5" CornerRadius="12" 
                Padding="5" Background="{StaticResource SecondaryBackground}">

            <TextBlock Style="{StaticResource SummaryDiffCardStyle}"
                       Text="{Binding TotalDifference, StringFormat={}{0:+# ##0.00 kr;-# ##0.00 kr}}"/>
        </Border>
    </Grid>
    
   
</UserControl>

<Window x:Class="BudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        

        xmlns:views="clr-namespace:BudgetPlanner.PresentationLayer.Views"
        
        mc:Ignorable="d"
        Title="Budget Planner" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="24" Margin="5"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <StackPanel Grid.Column="0" Background="#2C3E50">

            <Button Style="{StaticResource NavButtonStyle}"
                    Content="🏠"
                    ToolTip="Dashboard"
                    Command="{Binding NavigateDashboardCommand}"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="📘"
                     ToolTip="Budgetöversikt"
                     Command="{Binding NavigateBudgetPostsCommand}"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="📘"
                     ToolTip="Kategorier"
                     Command="{Binding NavigateCategoriesCommand}"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="📘"
                     ToolTip="Prognoser"
                     Command="{Binding NavigatePrognosisCommand}"/>

            <Button Style="{StaticResource NavButtonStyle}"
         Content="📘"
         ToolTip="Inställningar"
         Command="{Binding NavigateSettingsCommand}"/>


        </StackPanel>


        <!-- CONTENT AREA -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}" />

    </Grid>
</Window>

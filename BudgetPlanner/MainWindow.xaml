<Window x:Class="BudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanner"     

        xmlns:views="clr-namespace:BudgetPlanner.PresentationLayer.Views"
        
        mc:Ignorable="d"
        Title="Budgetplaneraren" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="{TemplateBinding Content}"
                                           FontSize="24" Margin="5"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top bar-->
        <Rectangle Grid.Column="1" Grid.Row="0" Fill="#2C3E50"></Rectangle>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="BudgetPlaneraren"
                 FontSize="35" HorizontalAlignment="Left"
                 Margin="10,0,0,10"
                   Foreground="white" />

        <Rectangle Grid.Column="0" Grid.Row="0" Fill="Black"></Rectangle>
        
        <!-- LEFT SIDEBAR -->
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#2C3E50">

            <Button Style="{StaticResource NavButtonStyle}"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE80F;"
                    ToolTip="Dashboard"
                    Foreground="{StaticResource PrimaryBlueLight}"
                    Command="{Binding NavigateDashboardCommand}"
                    HorizontalAlignment="Center"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="💰"
                     ToolTip="Budgetöversikt"
                    Foreground="{StaticResource PrimaryBlueLight}"
                     Command="{Binding NavigateBudgetPostsCommand}"
                    HorizontalAlignment="Center"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="🗂️"
                     ToolTip="Kategorier"
                    Foreground="{StaticResource PrimaryBlueLight}"
                     Command="{Binding NavigateCategoriesCommand}"
                    HorizontalAlignment="Center"/>

            <Button Style="{StaticResource NavButtonStyle}"
                     Content="📈"
                     ToolTip="Prognoser"
                    Foreground="{StaticResource PrimaryBlueLight}"
                     Command="{Binding NavigatePrognosisCommand}"
                    HorizontalAlignment="Center"/>

            <Button Style="{StaticResource NavButtonStyle}"
                    FontFamily="Segoe MDL2 Assets"
                     Content="&#xE713;"
                     ToolTip="Inställningar"
                     Foreground="{StaticResource PrimaryBlueLight}"
                     Command="{Binding NavigateSettingsCommand}"
                    HorizontalAlignment="Center"/>

        </StackPanel>

       

        <!-- CONTENT AREA -->
        <ContentControl Grid.Column="1" Grid.Row="1"
                        Content="{Binding CurrentView}" />

        <!-- Modal backdrop -->
        <Border Grid.ColumnSpan="2" Grid.RowSpan="2"
        Background="#80000000"
        Visibility="{Binding DataContext.IsDialogOpen, RelativeSource={RelativeSource AncestorType=Window},
                             Converter={StaticResource BoolToVisibility}}" />


        <ContentControl x:Name="DialogHost"
                Grid.ColumnSpan="2" Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding CurrentDialog}"
                Visibility="{Binding IsDialogOpen, Converter={StaticResource BoolToVisibility}}" />


    </Grid>
</Window>
